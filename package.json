
{
  "name": "frameit",
  "version": "1.1.0",
  "description": "Favori web sitelerinizi tek bir tıkla bağımsız masaüstü uygulamalarına dönüştürün.",
  "main": "main.js",
  "author": "Uunan",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "jimp": "^0.22.12",
    "png2icons": "^2.0.1",
    "windows-shortcuts": "^0.1.6"
  },
  "devDependencies": {
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.uunan.frameit",
    "productName": "FrameIt",
    "publish": {
      "provider": "github",
      "owner": "Uunan",
      "repo": "FrameIt" 
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "webview.html",
      "webview-preload.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "build/icon.icns",
      "identity": null 
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}